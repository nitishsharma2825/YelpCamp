<%include ../partials/header%>
<div class="container">
    <header class="jumbotron"> 
       <div class="container">
        <h1>Welcome to YelpCamp!!!</h1>
        <p>Hand picked collection of campsites from around the world.</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
        </p>
    </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <%campground.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                    <img class="img-thumbnail" src="<%= camp.image %>">
                    <div class="caption">
                        <h4><%=camp.name%></h4>
                    </div>
                    <p><a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More info</a></p>
            </div>
        </div>
<%});%>
    </div>
</div>
<% include ../partials/footer %>